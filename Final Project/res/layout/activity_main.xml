<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFCC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With Yoon Bin"
        android:textColor="#2F9D27"
        android:textSize="18pt"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"

        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"

        android:src="@drawable/cho" />

    <Button
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#99CCCC"


        android:drawablePadding="10dp"
        android:onClick="Quiz"
        android:text="윤빈이 퀴즈" />

    <Button
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#99CCCC"
        android:onClick="result"
        android:text="퀴즈 결과" />

    <Button
        android:id="@+id/letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#99CCCC"
        android:onClick="letter"
        android:text="교수님께 드리는 편지" />

    <Button
        android:id="@+id/ms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#99CCCC"
        android:onClick="ms"
        android:text="교수님께 드리는 메세지" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#99CCCC"
        android:onClick="onClick"
        android:text="우리 사이 결과 종류!" />






</LinearLayout>